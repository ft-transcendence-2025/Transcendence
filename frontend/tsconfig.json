{
  "compilerOptions": {
    "target": "ES2020", // Choose ES5 or ES6 based on your needs
    "lib": ["DOM", "DOM.Iterable", "ES2020"], // Include DOM and ES2020 libraries
    "module": "ESNext", // Use ES Modules
    "moduleResolution": "node",
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow ES modules imports
    "skipLibCheck": true,
    "outDir": "./dist", // Output the compiled code to the dist folder
    "rootDir": "./src", // Root directory for TypeScript files
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*.ts"]
}
